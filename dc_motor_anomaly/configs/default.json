{
  "experiment": {
    "name": "default",
    "description": "",
    "auto_increment_id": true
  },

  "input_generator": {
    "sampling_rate_hz": 20000,
    "save_format": "npy",
    "signals": [
      {
        "type": "step",
        "duration_sec": 0.5,
        "amplitude": 12.0
      },
      {
        "type": "ramp",
        "duration_sec": 0.3,
        "start_amplitude": 0.0,
        "end_amplitude": 24.0
      },
      {
        "type": "sinusoidal",
        "duration_sec": 1.0,
        "amplitude": 12.0,
        "frequency_hz": 5.0,
        "offset": 12.0
      },
      {
        "type": "sawtooth",
        "duration_sec": 0.5,
        "amplitude": 24.0,
        "frequency_hz": 2.0
      },
      {
        "type": "triangular",
        "duration_sec": 0.5,
        "amplitude": 24.0,
        "frequency_hz": 2.0
      },
      {
        "type": "chirp",
        "duration_sec": 1.0,
        "amplitude": 12.0,
        "start_frequency_hz": 1.0,
        "end_frequency_hz": 20.0,
        "offset": 12.0
      }
    ]
  },

  "simulation": {
    "sampling_rate_hz": 20000,
    "motor_params": {
      "R": 1.0,
      "L": 0.5,
      "Kt": 0.01,
      "Ke": 0.01,
      "J": 0.01,
      "B": 0.1
    },
    "initial_conditions": {
      "current": 0.0,
      "angular_velocity": 0.0
    },
    "external_torque": 0.0,
    "output_variables": ["current", "angular_velocity", "voltage"]
  },

  "data_processing": {
    "target_sampling_rate_hz": 500,
    "derived_features": {
      "current": ["rms", "peak_to_peak", "variance"],
      "angular_velocity": ["rms", "peak_to_peak", "variance"]
    },
    "input_variables": ["current", "angular_velocity", "voltage"],
    "include_voltage_as_input": true,
    "window_size": 64,
    "window_stride": 32,
    "train_val_test_split": [0.7, 0.15, 0.15],
    "shuffle_seed": 42
  },

  "normalization": {
    "method": "minmax",
    "feature_range": [-1, 1],
    "store_statistics": true
  },

  "model": {
    "encoder_units": [64, 32],
    "decoder_units": [32, 64],
    "bottleneck": {
      "enabled": true,
      "units": 16,
      "activation": "relu"
    },
    "recurrent_dropout": 0.0,
    "dropout": 0.2,
    "activation": "tanh",
    "recurrent_activation": "sigmoid"
  },

  "physics_loss": {
    "enabled": true,
    "start_epoch": 10,
    "weight": 0.1,
    "motor_params": "from_simulation"
  },

  "training": {
    "epochs": 100,
    "batch_size": 32,
    "optimizer": {
      "type": "adam",
      "learning_rate": 0.001
    },
    "loss": "mse",
    "early_stopping": {
      "enabled": true,
      "monitor": "val_loss",
      "patience": 15,
      "min_delta": 1e-5,
      "restore_best_weights": true
    },
    "lr_scheduler": {
      "enabled": true,
      "type": "reduce_on_plateau",
      "monitor": "val_loss",
      "factor": 0.5,
      "patience": 5,
      "min_lr": 1e-6
    },
    "checkpoints": {
      "save_best": true,
      "save_last": true,
      "monitor": "val_loss"
    }
  },

  "hyperparameter_optimization": {
    "enabled": false,
    "n_trials": 50,
    "metric": "val_loss",
    "direction": "minimize",
    "parameters": {
      "model.encoder_units": {
        "type": "categorical",
        "choices": [[32], [64], [64, 32], [128, 64]]
      },
      "model.bottleneck.units": {
        "type": "int",
        "low": 8,
        "high": 64,
        "step": 8
      },
      "training.optimizer.learning_rate": {
        "type": "loguniform",
        "low": 1e-5,
        "high": 1e-2
      },
      "training.batch_size": {
        "type": "categorical",
        "choices": [16, 32, 64, 128]
      },
      "data_processing.window_size": {
        "type": "categorical",
        "choices": [32, 64, 128, 256]
      },
      "physics_loss.weight": {
        "type": "uniform",
        "low": 0.01,
        "high": 1.0
      },
      "physics_loss.start_epoch": {
        "type": "int",
        "low": 0,
        "high": 30,
        "step": 5
      }
    }
  },

  "plotting": {
    "save_format": "png",
    "dpi": 150,
    "figsize": [12, 6]
  },

  "paths": {
    "raw_data": "data/raw",
    "processed_data": "data/processed",
    "input_files": "data/inputs",
    "experiments": "experiments"
  }
}
