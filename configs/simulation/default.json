{
  "simulation_id": "default",
  "description": "Default DC motor simulation configuration",

  "input_generator": {
    "sampling_rate_hz": 20000,
    "save_format": "npy",
    "signals": [
      {
        "type": "step",
        "duration_sec": 0.5,
        "amplitude": 12.0
      },
      {
        "type": "ramp",
        "duration_sec": 0.3,
        "start_amplitude": 0.0,
        "end_amplitude": 24.0
      },
      {
        "type": "sinusoidal",
        "duration_sec": 1.0,
        "amplitude": 12.0,
        "frequency_hz": 5.0,
        "offset": 12.0
      },
      {
        "type": "sawtooth",
        "duration_sec": 0.5,
        "amplitude": 24.0,
        "frequency_hz": 2.0
      },
      {
        "type": "triangular",
        "duration_sec": 0.5,
        "amplitude": 24.0,
        "frequency_hz": 2.0
      },
      {
        "type": "chirp",
        "duration_sec": 1.0,
        "amplitude": 12.0,
        "start_frequency_hz": 1.0,
        "end_frequency_hz": 20.0,
        "offset": 12.0
      }
    ]
  },

  "simulation": {
    "sampling_rate_hz": 20000,
    "motor_params": {
      "R": 1.0,
      "L": 0.5,
      "Kt": 0.01,
      "Ke": 0.01,
      "J": 0.01,
      "B": 0.1
    },
    "initial_conditions": {
      "current": 0.0,
      "angular_velocity": 0.0
    },
    "external_torque": 0.0,
    "output_variables": ["current", "angular_velocity", "voltage"]
  },

  "plotting": {
    "save_format": "png",
    "dpi": 150,
    "figsize": [12, 6]
  },

  "paths": {
    "input_files": "data/inputs",
    "raw_data": "data/raw"
  }
}
