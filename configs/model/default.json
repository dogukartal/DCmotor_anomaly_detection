{
  "model_id": "default",
  "description": "Default LSTM autoencoder model configuration",
  "simulation_id": "default",

  "experiment": {
    "name": "default",
    "description": "",
    "auto_increment_id": true
  },

  "data_processing": {
    "target_sampling_rate_hz": 500,
    "derived_features": {
      "current": ["rms", "peak_to_peak","max", "min"],
    },
    "input_variables": ["current", "angular_velocity", "voltage"],
    "include_voltage_as_input": true,
    "window_size": 128,
    "window_stride": 16,
    "train_val_test_split": [0.7, 0.15, 0.15],
    "shuffle_seed": 42
  },

  "normalization": {
    "method": "minmax",
    "feature_range": [-1, 1],
    "store_statistics": true
  },

  "model": {
    "encoder_units": [364, 256, 128],
    "decoder_units": [128, 256, 364],
    "bottleneck": {
      "enabled": true,
      "units": 64,
      "activation": "relu"
    },
    "recurrent_dropout": 0.0,
    "dropout": 0.2,
    "activation": "tanh",
    "recurrent_activation": "sigmoid"
  },

  "physics_loss": {
    "enabled": true,
    "start_epoch": 700,
    "weight": 0.1,
    "motor_params": "from_simulation"
  },

  "training": {
    "epochs": 2000,
    "batch_size": 32,
    "optimizer": {
      "type": "adam",
      "learning_rate": 0.002
    },
    "loss": "mse",
    "early_stopping": {
      "enabled": true,
      "monitor": "val_loss",
      "patience": 15,
      "min_delta": 1e-5,
      "restore_best_weights": true
    },
    "lr_scheduler": {
      "enabled": true,
      "type": "reduce_on_plateau",
      "monitor": "val_loss",
      "factor": 0.5,
      "patience": 5,
      "min_lr": 1e-6
    },
    "checkpoints": {
      "save_best": true,
      "save_last": true,
      "monitor": "val_loss"
    }
  },

  "plotting": {
    "save_format": "png",
    "dpi": 150,
    "figsize": [12, 6],
    "plot_interval": 10,
    "num_samples": 1
  },

  "paths": {
    "processed_data": "data/processed",
    "experiments": "experiments"
  }
}
